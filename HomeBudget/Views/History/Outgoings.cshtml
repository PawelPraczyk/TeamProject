@model IEnumerable<HomeBudget.Models.Expense>
@{
    ViewBag.Title = "Outgoings";
}
<h2 style="margin-top: 50px;">@ViewBag.Title.</h2>

<h3>@ViewBag.Message</h3>

<div class="nav-history">
    <ul>
        <li>@Html.ActionLink("Incomes", "Incomes")</li>
        <li>@Html.ActionLink("Balance", "Balance")</li>
        <li>@Html.ActionLink("Outgoings", "Outgoings")</li>
    </ul>
</div>


<table id="outgoingstable">
    <caption>The list of previous purchases</caption>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Category)</th>
        <th>@Html.DisplayNameFor(model => model.Price)</th>
        <th>@Html.DisplayNameFor(model => model.User)</th>
    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
        </tr>
    }
    

   
</table>